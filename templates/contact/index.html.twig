{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}


{% block body %}
<div class="flex justify-center items-center min-h-screen ">
    <div class="w-full max-w-lg bg-white p-8 rounded-xl shadow-lg">
        <h1 class="text-2xl font-bold mb-4 text-center">Contactez moi</h1>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 text-green-700 p-2 rounded mb-4">{{ message }}</div>
        {% endfor %}

        {{ form_start(form, {attr: {class: "space-y-4"}}) }}
            <div>
                {{ form_widget(form.name, {attr: {class: "input rounded-lg w-full py-2.5 px-4 text-gray-800 bg-gray-100 border-2 border-transparent focus:border-gray-500 focus:bg-transparent text-sm outline-none transition-all"}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div>
                {{ form_widget(form.email, {attr: {class: "input rounded-lg w-full py-2.5 px-4 text-gray-800 bg-gray-100 border-2 border-transparent focus:border-gray-500 focus:bg-transparent text-sm outline-none transition-all"}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div>
                {{ form_widget(form.message, {attr: {class: "textarea rounded-lg w-full py-2.5 px-4 text-gray-800 bg-gray-100 border-2 border-transparent focus:border-gray-500 focus:bg-transparent text-sm outline-none transition-all"}}) }}
                {{ form_errors(form.message) }}
            </div>

            <div class="text-center">
                {{ form_widget(form.submit, {attr: {class: "btn rounded-lg text-white bg-black hover:bg-gray-900 tracking-wide text-sm px-4 py-2.5 w-full outline-none"}}) }}
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

