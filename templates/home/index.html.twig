<!-- JavaScript pour g√©rer l'affichage des cartes et la rotation des fl√®ches -->
<script>
    function toggleCard(index) {
        let card = document.getElementById(`card-${index}`);
        let arrow = document.getElementById(`arrow-${index}`);
        let allCards = document.querySelectorAll('[id^="card-"]');
        let allArrows = document.querySelectorAll('[id^="arrow-"]');

        allCards.forEach(c => {
            if (c !== card) {
                c.classList.add('hidden'); // Masque les autres cartes
            }
        });

        allArrows.forEach(a => {
            if (a !== arrow) {
                a.classList.remove('rotate-180'); // Remet les autres fl√®ches √† leur position d'origine
            }
        });

        card.classList.toggle('hidden'); // Affiche/masque la carte s√©lectionn√©e
        arrow.classList.toggle('rotate-180'); // Fait pivoter la fl√®che
    }
</script>

